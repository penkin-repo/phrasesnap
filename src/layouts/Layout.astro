---
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="PhraseSnap - Organize your thoughts" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/phrasesnap/favicon.svg" />
    <link rel="manifest" href="/phrasesnap/manifest.json">
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors">
    <div id="root">
      <slot />
    </div>
  </body>
</html>